
<div class="left-profile">
  <h1><%= @user.gamertag %></h1>
  <%=image_tag("adrienneOTRtour.JPG", size: "200x150", alt: "Adrienne Shen")%>
  <h4><%= @user.role %></h4> 
  <% if current_user = @user %>
    <%=link_to "Edit profile", edit_user_registration_path %>
  <% end %>
</div>  
    <div class="profile-facts">
      <ul>
      	<li><span class="fontmonkey">Name: </span><%= @user.name %></li>
      	<li><span class="fontmonkey">Real-Life Occupation: </span><%= @user.occupation %></li>
      	<li><span class="fontmonkey">Favorite Video Game: </span><%= @user.fave_game %></li>
      	<li><span class="fontmonkey">First Gaming Addiction: </span><%= @user.game_addiction %></li>
      	<li><span class="fontmonkey">Favorite Video Game Character: </span><%= @user.fave_character %></li>
      	<li><span class="fontmonkey">First FPS Game Played: </span><%= @user.first_fps %></li>
      	<li><span class="fontmonkey">Favorite Movie: </span><%= @user.fave_movie %></li>
      	<li><span class="fontmonkey">Hobbies & Interests: </span><%= @user.hobbies %></li>
      	<li><span class="fontmonkey">Something Not Many People Know About Me: </span><%= @user.fact %></li>
      	<li><span class="fontmonkey">Twitter: </span><%= @user.twitter %></li>
      </ul>
    </div>   



